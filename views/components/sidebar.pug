- const { avatar, personal, contact, links } = Sidebar

.left-area
	.row
		.col-xs-12
			.avatar.box
				a(href="/")
					img.img-responsive.img-circle(src="img/avatar2.jpg")
		.col-xs-12
			.title.hidden-print #{avatar.description}
			.name.box
				h1 #{avatar.name}
			.title.visible-print-block
				.ph3 #{avatar.description}
		.col-xs-12.hidden-print
			.icon-sets
				ul.icon-group
					li.icons
						a(href="/")
							.icon-icon
								span.fa-stack.fa-2x
									i.fa.fa-circle.fa-stack-2x
									i.fa.fa-file-text.fa-stack-1x.fa-inverse
							.icon-text Resume
					li.icons
						a(href="/portfolio")
							.icon-icon
								span.fa-stack.fa-2x
									i.fa.fa-circle.fa-stack-2x
									i.fa.fa-briefcase.fa-stack-1x.fa-inverse
							.icon-text Portfolio
		.col-xs-12
			.contact.box
				.row
					.col-xs-12
						h4 Personal
				.content
					.row
						.col-xs-4.col-print-12
							.left-label
								p Full Name
						.col-xs-8.col-print-12
							.right-label
								p #{personal.fullName}
					.row
						.col-xs-4.col-print-12
							.left-label
								p Birthday
						.col-xs-8.col-print-12
							.right-label
								p #{personal.birthday}
					.row
						.col-xs-4.col-print-12
							.left-label
								p Nationality
						.col-xs-8.col-print-12
							.right-label
								p #{personal.nationality}
					.row
						.col-xs-4.col-print-12
							.left-label
								p Languages
						.col-xs-8.col-print-12
							.right-label
								p #{personal.languages}
				.row
					.col-xs-12
						h4 Contact
				.content
					.row
						.col-xs-4.col-print-12
							.left-label
								p Address
						.col-xs-8.col-print-12
							.right-label
								p #{contact.address1}
					.row
						.col-xs-4.hidden-print
							.left-label
								p
						.col-xs-8.col-print-12
							.right-label
								p #{contact.address2}
					.row
						.col-xs-4.hidden-print
							.left-label
								p
						.col-xs-8.col-print-12
							.right-label
								p #{contact.address3}
					.row
						.col-xs-4.col-print-12
							.left-label
								p Phone
						.col-xs-8.col-print-12
							.right-label
								p #{contact.phone}
					.row
						.col-xs-4.col-print-12
							.left-label
								p Email
						.col-xs-8.col-print-12.hidden-print
							.right-label
								p
									a(href="mailto:tvpsh2020@gmail.com") #{contact.email}
						.col-xs-8.col-print-12.visible-print-block
							.right-label
								p #{contact.email}
					.row.hidden
						.col-xs-4.col-print-12
							.left-label
								p Portfolio
						.col-xs-8.col-print-12.hidden-print
							.right-label
								p
									a(href="https://jimmmmy.com/portfolio") jimmmmy.com/portfolio
						.col-xs-8.col-print-12.visible-print-block
							.right-label
								p jimmmmy.com/portfolio
		.col-xs-12
			.social.box
				.row
					.col-xs-12
						h4 Links
				.content
					.row
						.margin-top-15
							.col-xs-2.col-md-2
								.icons
									i.fa.fa-linkedin.fa-2x(aria-hidden="true")
							.col-xs-10.col-md-10
								.links.hidden-print
									a(href="https://www.linkedin.com/in/tvpsh2020/", target="_blank") LinkedIn
								.links.visible-print-block linkedin.com/in/tvpsh2020
					.row
						.margin-top-15
							.col-xs-2.col-md-2
								.icons
									i.fa.fa-wordpress.fa-2x(aria-hidden="true")
							.col-xs-10.col-md-10
								.links.hidden-print
									a(href="https://blog.jimmmmy.com/", target="_blank") Blog
								.links.visible-print-block blog.jimmmmy.com
					.row
						.margin-top-15
							.col-xs-2.col-md-2
								.icons
									i.fa.fa-facebook.fa-2x(aria-hidden="true")
							.col-xs-10.col-md-10
								.links.hidden-print
									a(href="https://www.facebook.com/jimmmmy.cheng/", target="_blank") Facebook
								.links.visible-print-block jimmmmy.cheng
					.row
						.margin-top-15
							.col-xs-2.col-md-2
								.icons
									i.fa.fa-instagram.fa-2x(aria-hidden="true")
							.col-xs-10.col-md-10
								.links.hidden-print
									a(href="https://www.instagram.com/tvpsh2020/", target="_blank") Instagram
								.links.visible-print-block @tvpsh2020

